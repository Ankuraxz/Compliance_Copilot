# Database
DATABASE_URL="postgresql://user:password@localhost:5432/compliance_copilot?schema=public"

# Application URL (for OAuth callbacks)
# Local development: http://localhost:3000
# Production: https://your-domain.com
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Supabase
NEXT_PUBLIC_SUPABASE_URL="your_supabase_url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_anon_key"
SUPABASE_SERVICE_ROLE_KEY="your_service_role_key"

# OpenAI
OPENAI_API_KEY="your_openai_key"
OPENAI_CHAT_MODEL="gpt-4o"  # or "gpt-5.2" when available
OPENAI_EMBEDDING_MODEL="text-embedding-3-small"
OPENAI_EMBEDDING_DIMS="1536"

# Redis (for MEM0 agent memory)
# Supports local Redis, self-hosted public Redis, or Redis cloud services
# Examples:
#   Local: redis://localhost:6379
#   Public with auth: redis://username:password@your-redis-host.com:6379
#   SSL/TLS: rediss://username:password@your-redis-host.com:6380
#   Redis Cloud: redis://default:password@redis-12345.c1.us-east-1-1.ec2.cloud.redislabs.com:12345
REDIS_URL="redis://localhost:6379"

# ============================================
# MCP CONNECTION SETUP
# ============================================
# 
# IMPORTANT: These environment variables are for SERVER-SIDE OAuth configuration only.
# Users connect their accounts through the Dashboard UI (Dashboard → MCP Connections).
# 
# For detailed connection instructions, see: docs/MCP_CONNECTION_GUIDE.md
#
# ============================================

# MCP OAuth - GitHub
# Used for server-side OAuth flow. Users can also connect via BYOK (Personal Access Token) in the UI.
GITHUB_CLIENT_ID="your_github_client_id"
GITHUB_CLIENT_SECRET="your_github_client_secret"
GITHUB_TOKEN="your_github_personal_access_token"  # Optional: for server-side operations

# MCP OAuth - Supabase (if using OAuth instead of API keys)
SUPABASE_CLIENT_ID="your_supabase_client_id"
SUPABASE_CLIENT_SECRET="your_supabase_client_secret"

# MCP OAuth - Cloudflare (OAuth or API Token)
CLOUDFLARE_CLIENT_ID="your_cloudflare_client_id"
CLOUDFLARE_CLIENT_SECRET="your_cloudflare_client_secret"
# OR use API Token instead:
CLOUDFLARE_API_TOKEN="your_cloudflare_api_token"
# Note: Cloudflare API Token is also used for Cloudflare Container MCP server (sandbox environments)

# MCP - File System
FILESYSTEM_ROOT="/path/to/allowed/directory"

# MCP - AWS Core (BYOK: AWS credentials)
# Users connect via Dashboard UI → MCP Connections → AWS Core → BYOK
# They enter: AWS_ACCESS_KEY_ID, AWS_SECRET_ACCESS_KEY, AWS_REGION as environment variables
# These are for server-side fallback only:
AWS_PROFILE="your_aws_profile"
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="us-east-1"

# MCP - Azure (BYOK: Azure credentials)
# Users connect via Dashboard UI → MCP Connections → Azure → BYOK
# They enter: AZURE_CLIENT_ID, AZURE_CLIENT_SECRET, AZURE_TENANT_ID as environment variables
# These are for server-side fallback only:
AZURE_CLIENT_ID="your_azure_client_id"
AZURE_CLIENT_SECRET="your_azure_client_secret"
AZURE_TENANT_ID="your_azure_tenant_id"

# MCP - ArgoCD (BYOK: API token)
ARGOCD_API_TOKEN="your_argocd_api_token"
ARGOCD_SERVER="https://your-argocd-server.com"
ARGOCD_USERNAME="your_argocd_username"

# MCP - Notion (BYOK: API key)
NOTION_API_KEY="your_notion_api_key"
NOTION_WORKSPACE_ID="your_notion_workspace_id"

# MCP - Sentry (BYOK: API token)
SENTRY_API_TOKEN="your_sentry_api_token"
SENTRY_ORG="your_sentry_org"
SENTRY_PROJECT="your_sentry_project"

# MCP - SonarQube (BYOK: API token)
SONARQUBE_TOKEN="your_sonarqube_token"
SONARQUBE_URL="https://your-sonarqube-server.com"

# MCP - Atlassian (OAuth or BYOK: API token)
# Users connect via Dashboard UI → MCP Connections → Communication → Atlassian
# Option 1: OAuth (recommended) - click "OAuth" button
# Option 2: BYOK - click "BYOK" and enter API token + domain
# These are for server-side OAuth configuration only:
ATLASSIAN_CLIENT_ID="your_atlassian_client_id"
ATLASSIAN_CLIENT_SECRET="your_atlassian_client_secret"
ATLASSIAN_API_TOKEN="your_atlassian_api_token"  # Optional: for server-side operations
ATLASSIAN_DOMAIN="your-domain.atlassian.net"

